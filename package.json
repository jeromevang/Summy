{
  "name": "summy",
  "version": "1.0.0",
  "description": "Context management middleware for LLM conversations",
  "workspaces": [
    "client",
    "server",
    "mcp-server",
    "rag-server"
  ],
  "scripts": {
    "dev": "npm run dev:client",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:mcp": "cd mcp-server && npm run dev",
    "dev:rag": "cd rag-server && npm run dev",
    "kill": "taskkill /F /IM node.exe /T 2>nul || echo No node processes found",
    "build": "npm run build:server && npm run build:client && npm run build:mcp && npm run build:rag",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build:mcp": "cd mcp-server && npm run build",
    "build:rag": "cd rag-server && npm run build",
    "install:all": "npm install",
    "postinstall": "cd mcp-server && npx playwright install chromium"
  },
  "keywords": [
    "llm",
    "context",
    "middleware",
    "proxy",
    "openai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "puppeteer": "^24.33.1"
  }
}
