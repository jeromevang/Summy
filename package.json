{
  "name": "summy",
  "version": "1.0.0",
  "description": "Context management middleware for LLM conversations",
  "workspaces": [
    "client",
    "server",
    "mcp-server",
    "rag-server",
    "database",
    "packages/shared",
    "packages/types"
  ],
  "scripts": {
    "dev": "concurrently -n server,client,rag,continue-tools -c blue,green,magenta,cyan \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:rag\" \"npm run dev:continue-tools\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:mcp": "cd mcp-server && npm run dev",
    "dev:rag": "cd rag-server && npm run dev",
    "dev:cursor-tools": "cd mcp-server && npm run dev:cursor-tools",
    "dev:continue-tools": "cd mcp-server && npm run dev:continue-tools",
    "kill": "taskkill /F /IM node.exe /T 2>nul || echo No node processes found",
    "dashboard": "cd server && npm run dashboard",
    "build": "npm run build:server && npm run build:client && npm run build:mcp && npm run build:rag",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build:mcp": "cd mcp-server && npm run build",
    "build:rag": "cd rag-server && npm run build",
    "install:all": "npm install",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:functional": "cd tests && node run-all-tests.mjs",
    "test:rag": "vitest run tests/functional/rag-server.test.mjs",
    "test:mcp": "vitest run tests/functional/mcp-server.test.mjs",
    "test:workspace": "vitest run tests/functional/workspace-management.test.mjs",
    "test:team": "vitest run tests/functional/team-builder.test.mjs",
    "test:learning": "vitest run tests/functional/learning-system.test.mjs",
    "test:ws": "vitest run tests/functional/websocket.test.mjs",
    "test:e2e": "node test-comprehensive.mjs",
    "test:all": "npm test && npm run test:functional && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "postinstall": "cd mcp-server && npx playwright install chromium"
  },
  "keywords": [
    "llm",
    "context",
    "middleware",
    "proxy",
    "openai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "puppeteer": "^24.33.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.3",
    "ts-morph": "^27.0.2"
  }
}
